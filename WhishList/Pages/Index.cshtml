@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="row justify-content-center text-center mt-5">
        <div class="col-md-8">
            <div class="mb-4">
                <i class="bi bi-gift-fill" style="font-size: 5rem; color: #0d6efd;"></i>
            </div>
            <h1 class="display-3 mb-4">Welcome to WhishList</h1>
            <p class="lead text-muted mb-5">
                Create and share your wishes with friends and family. Keep track of what you want,
                and see what your friends are wishing for!
            </p>

            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="row g-3 mb-5">
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-gift text-primary" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">My Wishes</h5>
                                <p class="card-text text-muted">Create and manage your wish list</p>
                                <a asp-page="/Wishes/Index" class="btn btn-primary">
                                    View Wishes
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-people text-success" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Friends</h5>
                                <p class="card-text text-muted">Connect with friends and view their wishes</p>
                                <a asp-page="/Friends/Index" class="btn btn-success">
                                    My Friends
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-plus-circle text-info" style="font-size: 2.5rem;"></i>
                                <h5 class="card-title mt-3">Add Wish</h5>
                                <p class="card-text text-muted">Create a new wish for your list</p>
                                <a asp-page="/Wishes/Create" class="btn btn-info">
                                    Create Wish
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="d-grid gap-3 d-md-block">
                    <a asp-page="/Account/Register" class="btn btn-primary btn-lg px-5">
                        <i class="bi bi-person-plus"></i> Get Started
                    </a>
                    <a asp-page="/Account/Login" class="btn btn-outline-primary btn-lg px-5">
                        <i class="bi bi-box-arrow-in-right"></i> Login
                    </a>
                </div>

                <div class="row mt-5 text-start">
                    <div class="col-md-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-list-check text-primary" style="font-size: 2rem;"></i>
                            </div>
                            <div>
                                <h5>Create Wish Lists</h5>
                                <p class="text-muted">Easily create and organize your wishes in one place</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-people text-success" style="font-size: 2rem;"></i>
                            </div>
                            <div>
                                <h5>Connect with Friends</h5>
                                <p class="text-muted">Add friends and see what they're wishing for</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex">
                            <div class="me-3">
                                <i class="bi bi-share text-info" style="font-size: 2rem;"></i>
                            </div>
                            <div>
                                <h5>Share & Discover</h5>
                                <p class="text-muted">Share your wishes and discover what your friends want</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
