@page
@model WhishList.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h1>Users</h1>
        </div>
        <div class="col text-end">
            <!-- Navigate to Create page -->
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New User
            </a>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Wishes Count</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <!-- Link to user's wishes -->
                    <a asp-page="/UserWishes/Index" asp-route-userId="@user.Id">
                        @(user.Wishes?.Count ?? 0) wishes
                    </a>
                </td>
                <td>
                    <div class="btn-group" role="group">
                        <!-- Each action goes to its own page -->
                        <a asp-page="./Details" asp-route-id="@user.Id"
                           class="btn btn-sm btn-outline-info">Details</a>
                        <a asp-page="./Edit" asp-route-id="@user.Id"
                           class="btn btn-sm btn-outline-warning">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@user.Id"
                           class="btn btn-sm btn-outline-danger">Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>