@page "{id:int}"
@model WhishList.Pages.Users.DetailsModel

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-circle"></i> User Details
                    </h4>
                </div>
                <div class="card-body">
                    <!-- User information -->
                    <div class="row">
                        <div class="col-md-4">
                            <!-- User avatar placeholder -->
                            <div class="text-center mb-3">
                                <i class="bi bi-person-circle" style="font-size: 8rem; color: #6c757d;"></i>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <h2>@Model.User.FullName</h2>

                            <dl class="row">
                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.User.Email">@Model.User.Email</a>
                                </dd>

                                <dt class="col-sm-4">User ID</dt>
                                <dd class="col-sm-8">@Model.User.Id</dd>

                                <dt class="col-sm-4">Total Wishes</dt>
                                <dd class="col-sm-8">
                                    @Model.UserWishes.Count
                                    @if (Model.UserWishes.Count > 0)
                                    {
                                        <a asp-page="/UserWishes/Index" asp-route-userId="@Model.User.Id"
                                           class="ms-2 btn btn-sm btn-outline-primary">
                                            View Wishes
                                        </a>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Recent wishes preview -->
                    @if (Model.UserWishes.Count > 0)
                    {
                        <hr />
                        <h5>Recent Wishes</h5>
                        <div class="list-group">
                            @foreach (var wish in Model.UserWishes.Take(3))
                            {
                                <a asp-page="/Wishes/Details" asp-route-id="@wish.Id"
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@wish.Title</h6>
                                    </div>
                                    <p class="mb-1 text-muted">@wish.Description</p>
                                </a>
                            }
                        </div>

                        @if (Model.UserWishes.Count > 3)
                        {
                            <div class="mt-2">
                                <a asp-page="/UserWishes/Index" asp-route-userId="@Model.User.Id">
                                    View all @Model.UserWishes.Count wishes â†’
                                </a>
                            </div>
                        }
                    }

                    <hr />

                    <!-- Action buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.User.Id"
                               class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.User.Id"
                               class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>