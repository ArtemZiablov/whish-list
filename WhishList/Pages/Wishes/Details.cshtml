@page "{id:int}"
@model WhishList.Pages.Wishes.DetailsModel

@{
    ViewData["Title"] = Model.Wish.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Wishes</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Wish.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-gift"></i> Wish Details
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Image Section -->
                    @if (!string.IsNullOrEmpty(Model.Wish.Image))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.Wish.Image" class="img-fluid rounded"
                                 alt="@Model.Wish.Title" style="max-height: 400px;">
                        </div>
                    }

                    <!-- Title and Description -->
                    <h2 class="mb-3">@Model.Wish.Title</h2>

                    @if (!string.IsNullOrWhiteSpace(Model.Wish.Description))
                    {
                        <div class="mb-4">
                            <h5>Description</h5>
                            <p class="text-muted">@Model.Wish.Description</p>
                        </div>
                    }

                    <!-- Product Link -->
                    @if (!string.IsNullOrEmpty(Model.Wish.Url))
                    {
                        <div class="mb-4">
                            <h5>Product Link</h5>
                            <a href="@Model.Wish.Url" target="_blank"
                               class="btn btn-outline-primary">
                                <i class="bi bi-box-arrow-up-right"></i> View Product
                            </a>
                        </div>
                    }

                    <!-- Metadata -->
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <h5>Details</h5>
                            <dl>
                                <dt>Wish ID</dt>
                                <dd>@Model.Wish.Id</dd>

                                <dt>Added by</dt>
                                <dd>
                                    <a asp-page="./Index" asp-route-userId="@Model.Wish.UserId">
                                        @Model.Wish.User?.FullName
                                    </a>
                                </dd>

                                <dt>Email</dt>
                                <dd>
                                    <a href="mailto:@Model.Wish.User?.Email">
                                        @Model.Wish.User?.Email
                                    </a>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <hr />
                    <div class="d-flex justify-content-between">
                        <div>
                            <a asp-page="./Index" asp-route-userId="@Model.Wish.UserId"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to User's Wishes
                            </a>
                        </div>
                        <div>
                            <a asp-page="./Edit" asp-route-id="@Model.Wish.Id"
                               class="btn btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-page="./Delete" asp-route-id="@Model.Wish.Id"
                               class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <!-- User Info Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-person-circle"></i> Wish Owner
                    </h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <i class="bi bi-person-circle" style="font-size: 4rem; color: #6c757d;"></i>
                    </div>
                    <h6 class="text-center">@Model.Wish.User?.FullName</h6>
                    <p class="text-center text-muted">@Model.Wish.User?.Email</p>
                    <div class="d-grid">
                        <a asp-page="./Index" asp-route-userId="@Model.Wish.UserId"
                           class="btn btn-outline-primary">
                            View All Wishes
                        </a>
                    </div>
                </div>
            </div>

            <!-- Related Wishes -->
            @if (Model.RelatedWishes.Count > 0)
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-gift"></i> Other Wishes by @Model.Wish.User?.FullName
                        </h5>
                    </div>
                    <div class="list-group list-group-flush">
                        @foreach (var relatedWish in Model.RelatedWishes)
                        {
                            <a asp-page="./Details" asp-route-id="@relatedWish.Id"
                               class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">@relatedWish.Title</h6>
                                </div>
                                @if (!string.IsNullOrWhiteSpace(relatedWish.Description))
                                {
                                    <small class="text-muted">
                                        @(relatedWish.Description.Length > 50
                                            ? relatedWish.Description.Substring(0, 50) + "..."
                                            : relatedWish.Description)
                                    </small>
                                }
                            </a>
                        }
                    </div>
                    @if (Model.RelatedWishes.Count == 3)
                    {
                        <div class="card-footer">
                            <a asp-page="./Index" asp-route-userId="@Model.Wish.UserId"
                               class="btn btn-sm btn-outline-secondary w-100">
                                View All â†’
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>