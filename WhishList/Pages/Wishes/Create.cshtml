@page
@model WhishList.Pages.Wishes.CreateModel

@{
    ViewData["Title"] = "Create New Wish";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-plus-circle"></i> Create New Wish
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Hidden field for UserId -->
                        <input type="hidden" asp-for="Wish.UserId" />
                        
                        <!-- Title Field -->
                        <div class="mb-3">
                            <label asp-for="Wish.Title" class="form-label">Title *</label>
                            <input asp-for="Wish.Title" class="form-control" 
                                   placeholder="Enter wish title" required />
                            <span asp-validation-for="Wish.Title" class="text-danger"></span>
                        </div>
                        
                        <!-- Description Field -->
                        <div class="mb-3">
                            <label asp-for="Wish.Description" class="form-label">Description</label>
                            <textarea asp-for="Wish.Description" class="form-control" rows="3"
                                      placeholder="Describe your wish (optional)"></textarea>
                            <span asp-validation-for="Wish.Description" class="text-danger"></span>
                        </div>
                        
                        <!-- Image URL Field -->
                        <div class="mb-3">
                            <label asp-for="Wish.Image" class="form-label">Image URL</label>
                            <input asp-for="Wish.Image" class="form-control" type="url" 
                                   placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="Wish.Image" class="text-danger"></span>
                        </div>
                        
                        <!-- Product URL Field -->
                        <div class="mb-3">
                            <label asp-for="Wish.Url" class="form-label">Product URL</label>
                            <input asp-for="Wish.Url" class="form-control" type="url" 
                                   placeholder="https://example.com/product" />
                            <span asp-validation-for="Wish.Url" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Wish.PriceAmount" class="form-label">Price</label>
                            <input asp-for="Wish.PriceAmount" class="form-control" type="number" step="0.01" min="0"
                                   placeholder="0.00" />
                            <span asp-validation-for="Wish.PriceAmount" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Wish.PriceCurrencyCode" class="form-label">Currency</label>
                            <select asp-for="Wish.PriceCurrencyCode" class="form-select">
                                <option value="EUR">Euro (EUR)</option>
                                <option value="DKK">Danish Krone (DKK)</option>
                                <option value="UAH">Ukrainian Hryvnia (UAH)</option>
                                <option value="USD">US Dollar (USD)</option>
                            </select>
                            <span asp-validation-for="Wish.PriceCurrencyCode" class="text-danger"></span>
                        </div>
                        
                        <!-- Form Actions -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-circle"></i> Create Wish
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
