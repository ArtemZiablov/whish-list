@page "{id:int}"
@model WhishList.Pages.Wishes.DeleteModel

@{
    ViewData["Title"] = "Delete Wish";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Delete Confirmation
                    </h4>
                </div>
                <div class="card-body">
                    <!-- Warning Alert -->
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <strong>Warning!</strong> Are you sure you want to delete this wish?
                        This action cannot be undone.
                    </div>

                    <!-- Wish Details -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">@Model.Wish.Title</h5>

                            @if (!string.IsNullOrEmpty(Model.Wish.Image))
                            {
                                <div class="text-center mb-3">
                                    <img src="@Model.Wish.Image" class="img-thumbnail"
                                         style="max-height: 200px;" alt="@Model.Wish.Title" />
                                </div>
                            }

                            <dl class="row">
                                <dt class="col-sm-4">Description</dt>
                                <dd class="col-sm-8">
                                    @(string.IsNullOrWhiteSpace(Model.Wish.Description)
                                        ? "No description"
                                        : Model.Wish.Description)
                                </dd>

                                <dt class="col-sm-4">Owner</dt>
                                <dd class="col-sm-8">
                                    @Model.Wish.User?.FullName
                                    <small class="text-muted">(@Model.Wish.User?.Email)</small>
                                </dd>

                                @if (!string.IsNullOrEmpty(Model.Wish.Url))
                                {
                                    <dt class="col-sm-4">Product URL</dt>
                                    <dd class="col-sm-8">
                                        <a href="@Model.Wish.Url" target="_blank"
                                           class="text-truncate d-inline-block"
                                           style="max-width: 300px;">
                                            @Model.Wish.Url
                                        </a>
                                    </dd>
                                }
                            </dl>
                        </div>
                    </div>

                    <!-- Delete Form -->
                    <form method="post">
                        <input type="hidden" asp-for="Wish.Id" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-page="./Index" asp-route-userId="@Model.Wish.UserId"
                               class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Delete Wish
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>