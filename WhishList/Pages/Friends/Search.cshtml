@page
@model WhishList.Pages.Friends.SearchModel

@{
    ViewData["Title"] = "Find Friends";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-search"></i> Find Friends</h1>
        </div>
        <div class="col text-end">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Friends
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="row g-3">
                    <div class="col-md-9">
                        <input type="text" name="searchTerm" value="@Model.SearchTerm"
                               class="form-control form-control-lg"
                               placeholder="Search by name or email..." />
                    </div>
                    <div class="col-md-3">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-search"></i> Search
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
    {
        @if (Model.SearchResults.Count == 0)
        {
            <div class="alert alert-info text-center">
                <i class="bi bi-info-circle"></i>
                No users found matching "@Model.SearchTerm"
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        Search Results
                        <span class="badge bg-secondary">@Model.SearchResults.Count</span>
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var result in Model.SearchResults)
                    {
                        <div class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-person-circle me-3" style="font-size: 2rem; color: #6c757d;"></i>
                                        <div>
                                            <h6 class="mb-1">@result.User.FullName</h6>
                                            <small class="text-muted">@result.User.Email</small>
                                            <br />
                                            <small class="text-muted">
                                                <i class="bi bi-gift"></i> @result.User.Wishes.Count wishes
                                            </small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-auto">
                                    @if (result.IsFriend)
                                    {
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i> Friends
                                        </span>
                                        <a asp-page="/Wishes/Index" asp-route-userId="@result.User.Id"
                                           class="btn btn-outline-primary btn-sm ms-2">
                                            <i class="bi bi-gift"></i> View Wishes
                                        </a>
                                    }
                                    else if (result.Friendship != null)
                                    {
                                        @* FIXED: Enum name was incorrect *@
                                        @if (result.Friendship.Status == WhishList.Data.FriendRequestStatus.Pending)
                                        {
                                            @* FIXED: Comparison was int == string, now int == int *@
                                            @if (result.Friendship.UserId == Model.CurrentUserId)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-clock"></i> Request Sent
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">
                                                    <i class="bi bi-bell"></i> Pending Response
                                                </span>
                                                <a asp-page="./Index" class="btn btn-primary btn-sm ms-2">
                                                    Respond
                                                </a>
                                            }
                                        }
                                    }
                                    else
                                    {
                                        <form method="post" class="d-inline">
                                            <input type="hidden" name="friendId" value="@result.User.Id" />
                                            <input type="hidden" name="searchTerm" value="@Model.SearchTerm" />
                                            <button type="submit" asp-page-handler="SendRequest"
                                                    class="btn btn-primary btn-sm">
                                                <i class="bi bi-person-plus"></i> Add Friend
                                            </button>
                                        </form>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted py-5">
            <i class="bi bi-search" style="font-size: 4rem;"></i>
            <p class="mt-3">Search for users by name or email to add them as friends</p>
        </div>
    }
</div>