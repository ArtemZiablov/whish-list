@page "{id:int}"
@model WhishList.Pages.Friends.DetailsModel

@{
    ViewData["Title"] = Model.Friend.FullName;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-page="./Index">Friends</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Friend.FullName</li>
        </ol>
    </nav>

    <div class="row">
        <!-- User Profile Card -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <i class="bi bi-person-circle" style="font-size: 8rem; color: #6c757d;"></i>
                    <h3 class="mt-3">@Model.Friend.FullName</h3>
                    <p class="text-muted">@Model.Friend.Email</p>

                    @if (Model.IsCurrentUser)
                    {
                        <span class="badge bg-primary mb-3">
                            <i class="bi bi-person-check"></i> This is you
                        </span>
                    }
                    else if (Model.IsFriend)
                    {
                        <span class="badge bg-success mb-3">
                            <i class="bi bi-check-circle"></i> Friends
                        </span>
                    }

                    <hr />

                    <div class="text-start">
                        <h6 class="text-muted">Statistics</h6>
                        <div class="d-flex justify-content-between mb-2">
                            <span><i class="bi bi-gift"></i> Total Wishes:</span>
                            <strong>@Model.FriendWishes.Count</strong>
                        </div>
                    </div>

                    @if (!Model.IsCurrentUser)
                    {
                        <hr />
                        <div class="d-grid gap-2">
                            @if (Model.IsFriend)
                            {
                                <a asp-page="/Wishes/Index" asp-route-userId="@Model.Friend.Id"
                                   class="btn btn-primary">
                                    <i class="bi bi-gift"></i> View All Wishes
                                </a>
                                <form method="post" asp-page-handler="RemoveFriend" asp-route-id="@Model.Friend.Id">
                                    <button type="submit" class="btn btn-outline-danger w-100"
                                            onclick="return confirm('Remove @Model.Friend.FullName from your friends?');">
                                        <i class="bi bi-person-dash"></i> Remove Friend
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-info mb-0">
                                    <i class="bi bi-info-circle"></i> Add this person as a friend to see their wishes
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Wishes Section -->
        <div class="col-md-8">
            @if (Model.IsFriend || Model.IsCurrentUser)
            {
                <div class="card shadow-sm">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-gift-fill"></i>
                            @(Model.IsCurrentUser ? "My Wishes" : $"{Model.Friend.FullName}'s Wishes")
                            <span class="badge bg-primary">@Model.FriendWishes.Count</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.FriendWishes.Count == 0)
                        {
                            <div class="text-center py-5">
                                <i class="bi bi-gift" style="font-size: 4rem; color: #dee2e6;"></i>
                                <p class="text-muted mt-3">
                                    @(Model.IsCurrentUser ? "You haven't" : $"{Model.Friend.FullName} hasn't") created any wishes yet
                                </p>
                                @if (Model.IsCurrentUser)
                                {
                                    <a asp-page="/Wishes/Create" class="btn btn-primary">
                                        <i class="bi bi-plus-circle"></i> Create Your First Wish
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="row g-3">
                                @foreach (var wish in Model.FriendWishes.Take(6))
                                {
                                    <div class="col-md-6">
                                        <div class="card h-100">
                                            @if (!string.IsNullOrEmpty(wish.Image))
                                            {
                                                <img src="@wish.Image" class="card-img-top" alt="@wish.Title"
                                                     style="height: 200px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                                                     style="height: 200px;">
                                                    <i class="bi bi-image text-muted" style="font-size: 3rem;"></i>
                                                </div>
                                            }
                                            <div class="card-body">
                                                <h6 class="card-title">@wish.Title</h6>
                                                <p class="card-text text-muted small">
                                                    @if (!string.IsNullOrWhiteSpace(wish.Description))
                                                    {
                                                        @(wish.Description.Length > 80
                                                            ? wish.Description.Substring(0, 80) + "..."
                                                            : wish.Description)
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">No description</span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="card-footer bg-transparent">
                                                <div class="d-flex justify-content-between">
                                                    <a asp-page="/Wishes/Details" asp-route-id="@wish.Id"
                                                       class="btn btn-sm btn-outline-primary">
                                                        <i class="bi bi-eye"></i> View
                                                    </a>
                                                    @if (!string.IsNullOrEmpty(wish.Url))
                                                    {
                                                        <a href="@wish.Url" target="_blank"
                                                           class="btn btn-sm btn-outline-success">
                                                            <i class="bi bi-box-arrow-up-right"></i> Link
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>

                            @if (Model.FriendWishes.Count > 6)
                            {
                                <div class="text-center mt-4">
                                    <a asp-page="/Wishes/Index" asp-route-userId="@Model.Friend.Id"
                                       class="btn btn-primary">
                                        <i class="bi bi-grid"></i> View All @Model.FriendWishes.Count Wishes
                                    </a>
                                </div>
                            }
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-lock" style="font-size: 5rem; color: #dee2e6;"></i>
                        <h4 class="mt-3">Wishes Are Private</h4>
                        <p class="text-muted">
                            You need to be friends with @Model.Friend.FullName to see their wishes.
                        </p>
                        <a asp-page="./Search" class="btn btn-primary">
                            <i class="bi bi-person-plus"></i> Send Friend Request
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Back Button -->
    <div class="row mt-4">
        <div class="col">
            <a asp-page="./Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Friends
            </a>
        </div>
    </div>
</div>
