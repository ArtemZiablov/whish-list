@page
@model WhishList.Pages.Friends.IndexModel

@{
    ViewData["Title"] = "My Friends";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col">
            <h1><i class="bi bi-people-fill"></i> My Friends</h1>
            <p class="text-muted">
                Manage your friends and see their wishes
            </p>
        </div>
        <div class="col-auto">
            <a asp-page="./Search" class="btn btn-primary">
                <i class="bi bi-search"></i> Find Friends
            </a>
        </div>
    </div>

    <!-- Pending Friend Requests -->
    @if (Model.PendingRequests.Count > 0)
    {
        <div class="card mb-4 border-warning">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">
                    <i class="bi bi-bell-fill"></i> Pending Friend Requests
                    <span class="badge bg-dark">@Model.PendingRequests.Count</span>
                </h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var request in Model.PendingRequests)
                {
                    <div class="list-group-item">
                        <div class="row align-items-center">
                            <div class="col">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-circle me-3" style="font-size: 2.5rem; color: #6c757d;"></i>
                                    <div>
                                        <h6 class="mb-1">@request.User.FullName</h6>
                                        <small class="text-muted">@request.User.Email</small>
                                        <br />
                                        <small class="text-muted">
                                            <i class="bi bi-clock"></i> Requested @request.RequestedAt.ToLocalTime().ToString("MMM dd, yyyy")
                                        </small>
                                    </div>
                                </div>
                            </div>
                            <div class="col-auto">
                                <form method="post" class="d-inline">
                                    <input type="hidden" name="requestId" value="@request.Id" />
                                    <button type="submit" asp-page-handler="AcceptRequest"
                                            class="btn btn-success btn-sm"
                                            onclick="return confirm('Accept friend request from @request.User.FullName?');">
                                        <i class="bi bi-check-circle"></i> Accept
                                    </button>
                                </form>
                                <form method="post" class="d-inline">
                                    <input type="hidden" name="requestId" value="@request.Id" />
                                    <button type="submit" asp-page-handler="RejectRequest"
                                            class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Reject friend request from @request.User.FullName?');">
                                        <i class="bi bi-x-circle"></i> Reject
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Sent Friend Requests -->
    @if (Model.SentRequests.Count > 0)
    {
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="bi bi-send"></i> Sent Requests
                    <span class="badge bg-secondary">@Model.SentRequests.Count</span>
                </h5>
            </div>
            <div class="list-group list-group-flush">
                @foreach (var request in Model.SentRequests)
                {
                    <div class="list-group-item">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-person-circle me-3" style="font-size: 2rem; color: #6c757d;"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@request.FriendUser.FullName</h6>
                                <small class="text-muted">@request.FriendUser.Email</small>
                            </div>
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-clock"></i> Pending
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    }

    <!-- Friends List -->
    @if (Model.Friends.Count == 0 && Model.PendingRequests.Count == 0)
    {
        <div class="card text-center py-5">
            <div class="card-body">
                <i class="bi bi-people" style="font-size: 5rem; color: #dee2e6;"></i>
                <h3 class="mt-3">No Friends Yet</h3>
                <p class="text-muted">Start by searching for friends to add!</p>
                <a asp-page="./Search" class="btn btn-primary btn-lg mt-3">
                    <i class="bi bi-search"></i> Find Friends
                </a>
            </div>
        </div>
    }
    else if (Model.Friends.Count > 0)
    {
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-people"></i> My Friends
                    <span class="badge bg-primary">@Model.Friends.Count</span>
                </h5>
            </div>
            <div class="row g-0">
                @foreach (var friend in Model.Friends)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card m-2 h-100 shadow-sm">
                            <div class="card-body">
                                <div class="text-center mb-3">
                                    <i class="bi bi-person-circle" style="font-size: 4rem; color: #6c757d;"></i>
                                </div>
                                <h5 class="card-title text-center">@friend.FullName</h5>
                                <p class="card-text text-center text-muted small">@friend.Email</p>

                                <div class="text-center mb-3">
                                    <span class="badge bg-info">
                                        <i class="bi bi-gift"></i> @Model.FriendWishCounts[friend.Id] wishes
                                    </span>
                                </div>

                                <div class="d-grid gap-2">
                                    <a asp-page="./Details" asp-route-id="@friend.Id"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View Profile
                                    </a>
                                    <a asp-page="/Wishes/Index" asp-route-userId="@friend.Id"
                                       class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-gift"></i> View Wishes
                                    </a>
                                    <form method="post" class="d-inline">
                                        <input type="hidden" name="friendId" value="@friend.Id" />
                                        <button type="submit" asp-page-handler="RemoveFriend"
                                                class="btn btn-outline-danger btn-sm w-100"
                                                onclick="return confirm('Remove @friend.FullName from your friends?');">
                                            <i class="bi bi-person-dash"></i> Remove Friend
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    }
</div>
